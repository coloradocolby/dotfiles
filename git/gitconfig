[user]
    name = Colby Thomas
    email = colby@jrnxf.co
[pull]
	ff = only
[alias]
	s = status -s
	ss = status
  sq = commit -am 'squash'
	l = log --stat
	lo = log --oneline
	d = diff
	c = commit
	cp = cherry-pick
	a = add
	f = fetch
	rb = rebase
	co = checkout
	g = grep
	rs = reset
	pl = pull
	ps = push
	b = branch
[init]
	defaultBranch = main
[core]
	excludesfile = /Users/colby/.gitignore
[diff]
	tool = nvimdiff
  prompt = false
[difftool "nvimdiff"]
  cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"
[merge]
	tool = nvimdiff4
  prompt = false
[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
	autoSetupRemote = true
[pager]
	stash = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
